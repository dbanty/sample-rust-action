{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["\\.github/workflows/docker-publish\\.yml"],
      "matchStrings": [
        "cosign-release: '(?<currentVersion>v\\d+\\.\\d+\\.\\d+)'"
      ],
      "depNameTemplate": "sigstore/cosign",
      "datasourceTemplate": "github-releases"
    }
  ]
}
